{
  "name": "@jakguru/amqplib-oop",
  "version": "1.0.0",
  "description": "An Object-Oriented Wrapper around amqplib",
  "main": "dist/api.js",
  "scripts": {
    "test": "node -r ts-node/register bin/test.ts",
    "build": "rm -rf dist && npx tsc && rm -rf dist/bin && rm -rf dist/tests",
    "watch": "rm -rf dist && npx tsc -w && rm -rf dist/bin && rm -rf dist/tests",
    "docs": "npx typedoc",
    "docs:watch": "npx typedoc --watch",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "AMQP",
    "AMQP",
    "0-9-1",
    "RabbitMQ",
    "amqplib"
  ],
  "author": "Jak Guru <jak@jak.guru>",
  "license": "MIT",
  "repository": "github:jakguru/amqplib-oop",
  "dependencies": {
    "amqplib": "^0.10.3",
    "eventemitter2": "^6.4.9"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-typescript": "^7.22.5",
    "@japa/assert": "^1.4.1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@types/amqplib": "^0.10.1",
    "@types/dotenv": "^8.2.0",
    "adonis-preset-ts": "^2.1.0",
    "c8": "^8.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-coverage": "^2.1.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
